<h1>Create New Beer</h1>

<%= form_tag "/beers", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :alcohol_percentage %>
    <%= text_field_tag :alcohol_percentage %>
  </div>
  <div>
    <%= label_tag :beer_type %>
    <%= text_field_tag :beer_type %>
  </div>
  <%= submit_tag "Submit" %>


  <% end %>