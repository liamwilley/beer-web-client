<h1>Beer! Updated!</h1>

<%= form_tag "/beers/#{@beer["id"]}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @beer['name'] %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @beer['price'] %>
  </div>
  <div>
    <%= label_tag :alcohol_percentage %>
    <%= text_field_tag :alcohol_percentage, @beer['alcohol_percentage']%>
  </div>
  <div>
    <%= label_tag :beer_type %>
    <%= text_field_tag :beer_type, @beer['beer_type'] %>
  </div>
  <div>
    <% hidden_field_tag :id, @beer[:id] %>
  </div>
  <%= submit_tag "Update Beer" %>
<% end %>
